{
  "name": "vscode-wpilib-python",
  "displayName": "Robotpy",
  "description": "VSCode extension for Robotpy",
  "version": "0.0.1",
  "publisher": "robotpy",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:**/robot.py"
  ],
  "main": "./out/extension",
  "license": "BSD-3-Clause",
  "repository": "https://github.com/robotpy/vscode-wpilib-python",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "robotpy",
        "required": [
          "action"
        ],
        "properties": {
          "action": {
            "type": "string",
            "description": "The action to perform"
          },
          "path": {
            "type": "string",
            "description": "Path to robot.py file. If omitted, will use src/robot.py",
            "default": "src/robot.py"
          }
        }
      }
    ],
    "configuration": {
      "title": "Robotpy",
      "properties": {
        "robotpy.main": {
          "type": "string",
          "default": "src/robot.py",
          "description": "Path to the robot.py file."
        },
        "robotpy.year": {
          "type": "string",
          "default": null,
          "description": "The current year to use when searching for packages.",
          "examples": [
            "2019",
            "2020"
          ]
        },
        "robotpy.installer": {
          "type": "string",
          "default": "robotpy-installer",
          "description": "The robotpy installer method to use. Change to the python method call that calls your installer. Defaults to the pip robotpy-installer module."
        }
      }
    },
    "commands": [
      {
        "command": "robotpy.simulate",
        "title": "Simulate",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.deploy",
        "title": "Deploy",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.createproject",
        "title": "Create Robotpy Project",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.getopkg",
        "title": "Download Opkg",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.installopkg",
        "title": "Install Opkg",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.test",
        "title": "Test",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.installrobotpy",
        "title": "Install Robotpy to Robot",
        "category": "Robotpy"
      },
      {
        "command": "robotpy.downloadrobotpy",
        "title": "Download Robotpy to cache",
        "category": "Robotpy"
      }
    ]
  },
  "extensionDependencies": [
    "vscode.python"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run lint",
    "clean": "rmdir-cli out",
    "compile": "tsc -p ./",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^7.0.43",
    "rmdir-cli": "^2.0.6",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "vscode": "^1.1.36"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.15",
    "@types/node-fetch": "^2.5.4",
    "cheerio": "^1.0.0-rc.3",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "jsonc-parser": "^2.0.2",
    "node-fetch": "^2.6.0"
  }
}
