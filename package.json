{
    "name": "vscode-wpilib-python",
    "displayName": "vscode-wpilib-python",
    "description": "VSCode extension for WPILib Python",
    "version": "0.0.1",
    "publisher": "robotpy",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "license": "BSD-3-Clause",
    "repository": "https://github.com/thadhouse/vscode-wpilib-python",
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "python_preferences.json",
                "url": "./resources/pythonschema.json"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceExtname == .py && isWPILibProject",
                    "command": "wpilibcore.deployCode",
                    "group": "wpilib"
                },
                {
                    "when": "resourceExtname == .py && isWPILibProject",
                    "command": "wpilibcore.testCode",
                    "group": "wpilib"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run lint",
        "clean": "rmdir-cli out",
        "compile": "tsc -p ./",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.8.3",
        "vscode": "^1.1.7",
        "rmdir-cli": "^2.0.6",
        "tslint": "^5.10.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/glob": "^5.0.35",
        "@types/mkdirp": "^0.5.2",
        "@types/ncp": "^2.0.1",
        "glob": "^7.1.2",
        "jsonc-parser": "^2.0.0",
        "mkdirp": "^0.5.1",
        "ncp": "^2.0.0"
    }
}
